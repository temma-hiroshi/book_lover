<div class="container bg-light">
  <div class="text-center mt-5 pt-5 pb-5">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "名前", class: "mt-3 mb-2" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-8 col-sm-6 col-md-5 col-lg-4 col-xl-3 mb-2" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス", class: "mb-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-8 col-sm-6 col-md-5 col-lg-4 col-xl-3 mb-2" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード(6文字以上)", class: "mb-2" %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "col-8 col-sm-6 col-md-5 col-lg-4 col-xl-3 mb-2" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: "mb-2" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-8 col-sm-6 col-md-5 col-lg-4 col-xl-3 mb-2" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-primary col-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 mt-5" %>
      </div>
    <% end %>
    <%= link_to "ログイン", new_session_path(resource_name), class: "btn btn-secondary col-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 mt-5" %><br />
  </div>
</div>