<div class="container bg-light">
  <div class="text-center mt-5 pt-5 pb-5">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "名前", class: "mt-3 mb-2" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-3 mb-2" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス", class: "mb-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-3 mb-2" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class: "mb-2" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "col-3 mb-2" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: "mb-2" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3 mb-2" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "mt-3 col-2 btn btn-primary" %>
      </div>
    <% end %>

    <%= link_to "ログイン", new_session_path(resource_name), class: "btn btn-secondary col-2 mt-3" %><br />
  </div>
</div>