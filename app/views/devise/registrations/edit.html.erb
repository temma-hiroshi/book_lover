<div class="container bg-light">
  <div class="text-center mt-5 pt-5 pb-5">
    <h2>パスワード編集</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, "メールアドレス", class: "mb-2" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-8 col-sm-6 col-md-5 col-lg-4 col-xl-3 mb-2" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, "新しいパスワード(6文字以上)", class: "mb-2" %><br>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-8 col-sm-6 col-md-5 col-lg-4 col-xl-3 mb-2" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワード(確認用)", class: "mb-2" %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-8 col-sm-6 col-md-5 col-lg-4 col-xl-3 mb-2" %>
      </div>

      <div class="field">
        <%= f.label :current_password, "現在のパスワード", class: "mb-2" %><br>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "col-8 col-sm-6 col-md-5 col-lg-4 col-xl-3 mb-2" %>
      </div>

      <div class="actions">
          <%= f.submit "パスワード更新", class: "btn btn-primary col-8 col-sm-6 col-md-4 col-lg-3 col-xl-2 my-5" %>
      </div>
    <% end %>
    <%= link_to "トップページに戻る", home_index_path, class: "btn btn-secondary col-8 col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-5" %>
  </div>
</div>
