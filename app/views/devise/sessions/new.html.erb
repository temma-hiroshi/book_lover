<div class="container bg-light">
  <div class="text-center mt-5 pt-5 pb-5">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス", class: "mt-3 mb-2 input-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-3 mb-2" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class: "mt-3 mb-2 input-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "col-3 mb-2" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログインを記憶する" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary col-2 mt-5" %><br />
      </div>
    <% end %>

  <%= link_to "新規登録", new_registration_path(resource_name), class: "btn btn-secondary col-2 mt-3" %><br />
  </div>
</div>
