<div class="container user-container text-center mt-5 bg-light border border-2">
  <h2 class="py-4 ">名前、アイコン編集</h2>
  <%= render "shared/user_icon" %>
  <div class="form-container mb-5 pb-5">
    <%= form_with model:@user do |form| %>
      <%= form.label :name, "名前", class: "mt-3 mb-2 xs-1rem" %><br>
      <%= form.text_field :name, class: "col-10 col-sm-8 col-md-6 col-lg-4 col-xl-3 mb-2" %><br>

      <%= form.label :image, "アイコン", class: "mt-3 mb-2 xs-1rem" %><br>
      <%= form.file_field :image, class: "col-10 col-sm-8 col-md-6 col-lg-4 col-xl-3 mb-2" %><br>

      <%= form.submit "更新", class: "btn btn-success col-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 mt-4" %><br>
      <%= link_to "アカウント削除", user_path(current_user.id), method: :delete, 
          class: 'btn btn-danger col-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 mt-4', data: {confirm: "本当にアカウントを削除してよろしいですか？" } %><br>
    <% end %>
    <%= link_to "トップページに戻る", home_index_path, class: "btn btn-secondary col-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 mt-4" %>
  </div>
</div>
