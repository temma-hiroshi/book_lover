<div class="container edit-container text-center mt-5 bg-light border border-2">
  <h2 class="pt-5">コメントの編集</h2>
  <div class="form-container mb-5 pb-5">
    <%= form_with(model: @comment, local: true) do |form| %>
      <%= render "shared/error_messages", model: form.object %>
      <%= form.label :comment, "コメント", class: "mt-3 mb-2" %><br>
      <%= form.text_area :comment, class: "h-100px col-12 col-sm-8 col-md-6 col-lg-4 col-xl-3 mb-2" %><br>

      <%= form.hidden_field :user_id, value: @comment.user_id %>
      <%= form.hidden_field :book_id, value: @comment.book_id %>

      <%= form.submit "コメントの更新", class: "btn btn-success col-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 mt-5" %><br>
    <% end %>
    <%= link_to "トップページに戻る", home_index_path, class: "btn btn-secondary col-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 mt-5" %>
  </div>
</div>
